{
    "name": "watermark-backend",
    "version": "1.0.0",
    "description": "Watermark generator in nodejs with a frontend in svelte.",
    "main": "app.js",
    "author": "Gautier LABARRE",
    "scripts": {
        "build": "webpack",
        "run": "node app.js",
        "start": "nodemon app.js",
        "test": "jest --verbose --detectOpenHandles --coverage"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "2.8.5",
        "express": "4.17.1",
        "jest": "^27.2.5",
        "jimp": "^0.16.1",
        "multer": "^1.4.3",
        "nodemon": "^2.0.7",
        "supertest": "^6.1.6"
    },
    "devDependencies": {
        "@babel/core": "^7.14.5",
        "@babel/preset-env": "^7.14.5",
        "@types/jest": "^27.0.2",
        "babel-jest": "^27.0.2",
        "fs-extra": "^10.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/controllers/import.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ],
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "html"
        ]
    }
}
